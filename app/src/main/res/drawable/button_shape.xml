<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#c1d8e5"/>
            <stroke
                android:width="1dp"
                android:color="#06170f"/>
            <corners
                android:radius="5dp"/>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <gradient
                android:angle="270"
                android:startColor="#bbeac1"
                android:endColor="#2cae70"
                />
            <stroke
                android:width="1dp"
                android:color="#177c56"/>
            <corners
                android:radius="5dp"/>

        </shape>
    </item>
</selector>