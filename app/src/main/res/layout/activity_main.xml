<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_greenboard"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/main_screen_logo_width"
            android:layout_height="@dimen/main_screen_logo_height"
            android:layout_gravity="center"
            android:src="@drawable/welcome1"
            android:layout_marginTop="@dimen/main_screen_layout_marginTop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Math Tables"
            android:textSize="@dimen/main_screen_textsize"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/main_screen_layout_marginTop"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/bt_practice"
                android:layout_width="@dimen/main_practice_button_width"
                android:layout_height="@dimen/main_practice_button_height"
                android:text="practice"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/main_practic_button_marginTop"/>
           <Button
                android:id="@+id/bt_quiz"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="quiz"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
               android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|end">
            <ImageButton
                android:layout_width="@dimen/main_like_button_width"
                android:layout_height="@dimen/main_like_button_height"
                android:background="@drawable/hand_like_button"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"/>
            <ImageButton
                android:layout_width="@dimen/main_share_button_width"
                android:layout_height="@dimen/main_share_button_height"
                android:background="@drawable/share_icon"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>