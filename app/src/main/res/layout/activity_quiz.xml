<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_greenboard"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Quiz"
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_number1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="12"
                android:textColor="@android:color/white"
                android:textSize="29sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/multiply_sign"
                android:textColor="@android:color/white"
                android:textSize="29sp" />

            <TextView
                android:id="@+id/tv_number2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="29sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/equals_to"
                android:textColor="@android:color/white"
                android:textSize="29sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/question_mark"
                android:textColor="@android:color/white"
                android:textSize="29sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_ans1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_shape"
                android:text="ans1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_ans2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button_shape"
                android:text="ans2"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_ans3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_shape"
                android:text="ans3"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_ans4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button_shape"
                android:text="ans4"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>





